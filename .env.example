# Supabase 設定
VITE_SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
VITE_SUPABASE_ANON_KEY=YOUR_ANON_KEY_HERE
SUPABASE_SERVICE_ROLE_KEY=YOUR_SERVICE_ROLE_KEY_HERE

# GitHub API 設定 (用於前端手動觸發更新)
# 請至 GitHub Settings -> Developer settings -> Personal access tokens (classic) 建立
# 權限需包含: workflow
VITE_GITHUB_TOKEN=your_github_pat
VITE_GITHUB_OWNER=your_github_username
VITE_GITHUB_REPO=stock-portfolio-tracker

# --- 通知設定 ---

# OpenClaw Gateway 通知設定 (主要)
OPENCLAW_GATEWAY_URL=https://your-openclaw-domain
OPENCLAW_GATEWAY_TOKEN=your_strong_token
NOTIFICATION_TARGET_ID=your_line_user_id

# LINE Messaging API 通知設定 (備用選擇)
# 僅在不使用 OpenClaw Gateway 時設定
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_token
LINE_USER_ID=your_line_user_id
